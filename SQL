
//ACTUAL SCHEMA
create table register (
    table_id SERIAL PRIMARY KEY,
    started boolean default false,
    small_blind integer default 5,
    big_blind integer default 10,
    number_participants integer default 1,
    initial_money integer default 1000,
    participants_usernames TEXT[],
    paritcipants_current_money INTEGER[],
    big_blind_position integer default 0,
    number_of_games integer default 0,
    current_game_id: integer
)



//MORELESS SCHEMA STILL HAVE TO MAKE SOME WORK (MATEO)
create table game (
  game_id: integer,
  table_id: integer,
  pot: integer
  participants_cards: [2D4H, 4D4H, 5C5D]
  table_cards: [2H, 1H, 1D, 1C, 1T] //this will always have the full complete 5 cards of the table
  current_round_type: 0 // 0: preflop(0), 1: flop(3), 2: turn(4), 3:river(5)
  player_turn: 3
  active_participants: [true, false, true, flase, flase]
  matching_bet: 200   //once every player has been given the chance to meet the matching bet
  participants_bets: [20, 0, 20,40,60]
  current_action_id: 234

)



create table action( (MATEO)
  action_id: 43545
  game_id: 453
  player: INTEGER
  action_type: "Bet" //bet, fold, call, check
  amount: 200 //if bet/call is the action then how much
)
